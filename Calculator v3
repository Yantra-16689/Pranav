package PrototypeProj;

import java.util.Scanner;

public class CalculatorV2 {

	public static void main(String[] args) {
		
		
		Scanner in = new Scanner(System.in);
		
		// The Hello Dialog
		System.out.println("Hello what is your name?");
		String s = in.nextLine();
		System.out.println("Hi "+s);
		// End of Hello Dialog
		// If Statement for operation
		System.out.println("What operation do you want to conduct.");
		System.out.println("Press 1 for Addition, Press 2 for Subtraction, Press 3 for Multiplication, Press 4 for division");
		int o = in.nextInt();
		//End Of Operation Taking
		switch (o) {
		//Addition
        case 1:  System.out.println("What is the first number to add.");
		float add1 = in.nextFloat();
		System.out.println("Okay, What is the second number to add.");    
		float add2 = in.nextFloat();
		float A = add1+add2;
		System.out.println("Okay your answer is "+A);		
		System.out.println("Bye have a great day.");
		System.exit(0);
		//Subtraction
        case 2:  System.out.println("What is the first number to subtract.");
		float sub1 = in.nextFloat();
		System.out.println("Okay, What is the second number to subtract.");
		float  sub2 = in.nextFloat();
		float S = sub1-sub2;
		System.out.println("Okay your answer is "+S);		
		System.out.println("Bye have a great day.");
		System.exit(0);
		//Multiplication
        case 3:  System.out.println("What is the first number to multiply.");
        float mul1 = in.nextFloat();
		System.out.println("Okay, What is the second number to multiply.");
		float mul2 = in.nextFloat();
		float M = mul1*mul2;
		System.out.println("Okay your answer is "+M);		
		System.out.println("Bye have a great day.");
		System.exit(0);
		//Division
        case 4:  System.out.println("What is the first number to divide.");
        double div1 = in.nextDouble();
		System.out.println("Okay, What is the second number to divide.");
		double div2 = in.nextDouble();
		double D = div1/div2;
		System.out.println("Okay your answer is "+D);		
		System.out.println("Bye have a great day.");
		System.exit(0);
		default: System.out.println("Invalid Option Restart Calculator.");
		System.exit(0);
    }
		
		

	}

}

